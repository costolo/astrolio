---
import BaseLayout from '@components/layout/BaseLayout.astro'
import Card from 'src/components/atoms/Card.astro'
import Ocean from 'src/components/atoms/Ocean.astro'
---

<BaseLayout>
  <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
    <Card gridColumn="1 / -1" gridRow="1 / span 20">
      <p class="mt-4 outfit text-4xl md:text-5xl lg:text-7xl">
        ben costolo <span class="outfit text-xl md:text-2xl lg:text-4xl"
          >(he/him)</span
        >
      </p>
      <p class="mt-4 outfit text-xl md:text-2xl lg:text-4xl">
        nyc-based software engineer building apps for the web and mobile since
        2015
      </p>
      <p class="mt-4 outfit text-lg md:text-xl lg:text-2xl">
        <a href="cv">view my cv</a>
      </p>
      <Ocean />
    </Card>
  </section>
</BaseLayout>
